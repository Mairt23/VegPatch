<%= form_for(@extra_tip) do |f| %>
  <% if @extra_tip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@extra_tip.errors.count, "error") %> prohibited this extra_tip from being saved:</h2>

      <ul>
      <% @extra_tip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :tip %><br>
    <%= f.text_area :tip %>
  </div>
  <div class="field">
	<%= f.label :vegetable %><br>
	<%= f.select :vegetable, ExtraTip::VEGETABLE_TYPES, prompt: "Select vegetable to add tip for" %>
  <div class="actions">
    <%= f.submit 'Submit this tip' %>
  </div>
<% end %>
