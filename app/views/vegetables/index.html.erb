<p id="notice"><%= notice %></p>

<h1>Listing Vegetables</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Instructions</th>
      <th>Description</th>
      <th>Tips</th>
      <th>Easiness to grow rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vegetables.each do |vegetable| %>
      <tr>
        <td><%= vegetable.name %></td>
        <td><%= vegetable.instructions %></td>
        <td><%= vegetable.description %></td>
        <td><%= vegetable.tips %></td>
        <td><%= vegetable.easiness_to_grow_rating %></td>
        <td><%= link_to 'Show', vegetable %></td>
        <td><%= link_to 'Edit', edit_vegetable_path(vegetable) %></td>
        <td><%= link_to 'Destroy', vegetable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

